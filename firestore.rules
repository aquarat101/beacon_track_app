rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ให้แม่ (UID แทน userId ของแม่) อ่านเขียน zones ได้
    match /zones/{zoneId} {
      allow read, write: if request.auth != null && request.auth.uid == 'MOM_FIREBASE_UID';
    }

    // ให้แอพสแกน beacon อ่าน zones ได้
    match /zones/{zoneId} {
      allow read: if true;
      allow write: if false;
    }

    // ให้แอพสแกน beacon เขียนข้อมูล beacon_zone_hits ได้
    match /beacon_zone_hits/{docId} {
      allow create: if request.auth != null;  // หรือเจาะจง UID ของอุปกรณ์สแกน beacon ได้
      allow read: if false; // ห้ามอ่านโดย client
      allow update, delete: if false;
    }
  }
}
